<div class="row">
  <h1>Hi {{model.first_name}}</h1>
  {{#if 'model.first_login'}}
    <h3>{{t 'welcome.first-login.greeting'}}</h3>
  {{else}}
    <h3>{{t 'welcome.not-first-login.greeting'}}</h3>
  {{/if}}
</div>

<div class="row welcome-summary">
  <div class="col-xs-5 col-xs-offset-1 col-sm-3 col-sm-offset-3">
    {{#link-to 'members-area.messages' (query-params meethub_inv=true event_inv=false)}}
      <div {{bind-attr class=":summary-item hasUnreadMeethubInvitations:highlight"}} {{translateAttr  title='welcome.meethub-invitations'}}>
        {{#if 'hasUnreadMeethubInvitations'}}
          <div {{bind-attr class=":envelope hasUnreadMeethubInvitations:has-unread-messages"}}>{{unbound fa-icon "fa-envelope"}}</div>
        {{else}}
          <div class="envelope">{{unbound fa-icon "fa-envelope-o"}}</div>
        {{/if}}
        <div class="type">{{unbound fa-icon "fa-share-alt"}}</div>
        <div class="number">{{number_of_new_meethub_invitations}}</div>
      </div>
    {{/link-to}}
  </div>
  <div class="col-xs-5 col-sm-3">
    {{#link-to 'members-area.messages' (query-params meethub_inv=false event_inv=true)}}
      <div {{bind-attr class=":summary-item hasUnreadEventInvitations:highlight"}} {{translateAttr  title='welcome.event-invitations'}}>
        {{#if 'hasUnreadEventInvitations'}}
          <div {{bind-attr class=":envelope hasUnreadEventInvitations:has-unread-messages"}}>{{unbound fa-icon "fa-envelope"}}</div>
        {{else}}
          <div class="envelope">{{unbound fa-icon "fa-envelope-o"}}</div>
        {{/if}}
        <div class="type">{{unbound fa-icon "fa-music"}}</div>
        <div class="number">{{number_of_new_event_invitations}}</div>
      </div>
    {{/link-to}}
  </div>
</div>
