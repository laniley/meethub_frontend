<div class="side-nav-item-container">
  {{#each message in model}}
    <div class="side-nav-item">
      <div class="title">{{message.text}}</div>
      {{#if message.isEvent}}
      <div class="question">{{t 'messages.participation-question'}}</div>
      <div>
        <span class="button accept">{{unbound fa-icon "fa-check"}} {{t 'messages.accept'}}</span>
        <span class="button maybe">{{unbound fa-icon "fa-question"}} {{t 'messages.maybe'}}</span>
        <span class="button decline">{{unbound fa-icon "fa-remove"}} {{t 'messages.decline'}}</span>
      <div>
      <div class="start_time">{{message.event.start_time}}</div>
      <div class="location" {{action 'center_map' message.location}}>{{message.event.location.name}}</div>
      {{/if}}
    </div>
  {{/each}}

  {{outlet}}
</div>
