<div class="calendar">
  <div class="header row">
      <div class="col-xs-12"><h2>{{calendar.title}}</h2></div>
      <div class="col-xs-12 text-right controls">{{ember-cal-controls calendar=calendar}}</div>
  </div>

  <div class="row">
    <div
      {{bind-attr class="displayClass"}}>
      {{ember-cal
          component=calendar
          events=calendarevents
          color='#FF0000'
          textcolor='#FFFFFF'
          viewChanged='viewChanged'
          eventSelected='eventSelected'
          eventUnselected='eventUnselected'}}
    </div>

    {{!-- {{#if selectedEvent}}
