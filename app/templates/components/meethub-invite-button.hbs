<span {{bind-attr class=":button cssClass"}} {{action 'handleButtonClick'}}>
  {{#if isMember}}
    {{unbound fa-icon "fa-check" title="Already a member"}}
  {{else}}
    {{#if isPending}}
      {{unbound fa-icon "fa-circle-o-notch fa-spin" title="Pending..."}}
    {{else}}
      {{unbound fa-icon "fa-envelope" title="Invite"}}
    {{/if}}
  {{/if}}
</span>
